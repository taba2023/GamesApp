<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new2"
    tools:context=".EmailFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Send a Email for more information"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:paddingBottom="450dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">




        <EditText
            android:id="@+id/subject"
            android:hint="Enter subject "
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/content"
            android:hint="Enter content "
            android:textSize="20dp"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/to_email"
            android:textSize="20dp"
            android:hint="Enter in email address "
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnSend"
            android:text="Send email"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:backgroundTint="@color/blue"
            android:layout_width="300dp"
            android:layout_height="50dp"/>




    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/emaillogo"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="139dp"

        >

    </ImageView>


</FrameLayout>